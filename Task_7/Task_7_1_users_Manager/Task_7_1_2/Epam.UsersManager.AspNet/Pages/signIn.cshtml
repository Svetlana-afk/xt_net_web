@using Epam.UsersManager.Entities;
@{
    Layout = "~/_Layout.cshtml";
    if (IsPost)
    {
        var login = Request["login"];
        var password = Request["password"];
        if (Auth.CanLogin(login, password))
        {
            FormsAuthentication.SetAuthCookie(login, createPersistentCookie: true);
            Response.Redirect("/Pages/index.cshtml");
        }

    }
}

<div class="loginForm">
    <form action="" method="post">
        <div class="logPas">Login:    <input type="text" name="login" value="" /></div>
        <div class="logPas">Password: <input type="password" name="password" value="" /></div>
        <button>Sign In</button>
    </form>
</div>